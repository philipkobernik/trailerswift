%h2 Edit Tour

= render 'form'


%hr
.row-fluid
  .col-md-2.col-sm-6
    %h3 Tour Dates
    %p
      Tour currently has #{@tour.tour_dates.size} Tour Dates
    = link_to 'Manage Tour Dates', tour_tour_dates_path(@tour), class: 'btn btn-primary'

  .col-md-2.col-sm-6
    %h3 GPS Points
    %p
      Tour currently has #{@tour.locations.size} GPS Points
    = link_to 'Manage GPS Points', tour_locations_path(@tour), class: 'btn btn-primary'

