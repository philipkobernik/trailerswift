    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/

    <!-- Keep Facebook in the loop -->
    <meta property="og:title" content="Trailer Swift"/>
    <meta property="og:image" content="http://hm.campdoug.com/wp-content/uploads/2013/02/facebook-heymarseilles.jpg"/>
    <meta property="og:site_name" content="Trailer Swift"/>
    <meta property="og:description" content="Track Hey Marseilles and Trailer Swift as they tour the US in support of the new album Lines We Trace"/>

    %link{:href => "../assets/css/bootstrap-responsive.css", :rel => "stylesheet"}/
