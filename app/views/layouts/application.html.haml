!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title Trailer Swift
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    %script{:src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyAYPpFI_wyvt3rugd8nIgKau21DyqDypKQ&sensor=true", :type => "text/javascript"}
    = csrf_meta_tags

    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/

    <!-- Keep Facebook in the loop -->
    <meta name="description" content="Track Hey Marseilles and Trailer Swift as they tour the US in support of the new album Lines We Trace"/>
    <link rel="canonical" href="http://www.trailer-swift.com/" />
    <meta property="og:image" content="http://trailer-swift.com/images/trailer-swift-500.jpg"/>
    <meta property='og:locale' content='en_US'/>
    <meta property="og:description" content="Track Hey Marseilles and Trailer Swift as they tour the US in support of the new album Lines We Trace"/>
    <meta property='og:url' content='http://www.trailer-swift.com/'/>
    <meta property="og:site_name" content="Trailer Swift"/>
    <meta property="og:title" content="Trailer Swift"/>
    <meta property='og:type' content='website'/>

    / HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="../assets/js/html5shiv.js"></script>
    / Fav and touch icons
    %link{:href => "http://trailer-swift.com/images/trailer-swift-144.jpg", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}/
    %link{:href => "http://trailer-swift.com/images/trailer-swift-114.jpg", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}/
    %link{:href => "http://trailer-swift.com/images/trailer-swift-72.jpg", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}/
    %link{:href => "http://trailer-swift.com/images/trailer-swift-500.jpg", :rel => "apple-touch-icon-precomposed"}/
    %link{:href => "http://trailer-swift.com/images/trailer-swift-500.jpg", :rel => "shortcut icon"}/

    = render 'shared/mixpanel_tracker'
  %body
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: root_path} Trailer Swift
        .navbar-collapse.collapse
          %p.navbar-text.navbar-right
            - if session_logged_in?
              Logged in as
              %a.navbar-link{:href => "#"}= current_user.email
            - else
              %a.navbar-link{:href => new_user_session_path} Sign In
          %ul.nav.navbar-nav.navbar-left
            %li
              =link_to 'About', root_path
            %li
              %a{:href => 'http://github.com/philipkobernik/trailerswift'} Github Repo
          -#%form.navbar-form.navbar-right
            -#%input.form-control{placeholder: "Search...", type: "text"}/
    .container-fluid
      -if notice
        %p.notice= notice
      -if alert
        %p.alert= alert
      .row
        = render 'sidebar' if params[:controller] == 'tours' && params[:action] == 'show'
        .col-md-9
          .jumbotron
            = yield
      %footer.hidden-phone
        %p
          %a{:href => 'http://github.com/philipkobernik/trailerswift'} Open source
          project by
          %a{:href => 'http://github.com/philipkobernik'} philipkobernik
          and
          %a{:href => 'http://github.com/aelath'} aelath

